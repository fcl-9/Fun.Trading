@page "/accounts"
@using global::Fun.Trading.Api.Controllers.YourNamespace.Controllers
@inject Fun.Trading.UI.Services.IApiClient ApiClient

<h3>Accounts</h3>

@if (isLoading)
{
    <p>Loading accounts...</p>
}
else if (accounts == null || accounts.Count == 0)
{
    <p>No accounts found.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Owner</th>
                <th>Type</th>
                <th class="text-end">Balance</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var a in accounts)
            {
                <tr>
                    <td>@a.Id</td>
                    <td>@a.OwnerId</td>
                    <td>@a.AccountType</td>
                    <td class="text-end">@a.Balance.ToString("C")</td>
                    <td>
                        <a class="btn btn-link" href="@($"/accounts/{a.Id}")">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<AccountResponse>? accounts;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        accounts = await ApiClient.GetAccountsAsync();
        isLoading = false;
    }
}